@model GoOrder.Models.UserModel
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_CustomLayoutOne.cshtml";
}

    
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Forms</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Create User & Assign Role
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form action="/Dashboard/CreateUser" method="post" role="form">
                            @Html.AntiForgeryToken()                                    
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                <label>Email</label>
                                @*<input class="form-control">*@
                                @Html.TextBoxFor(m => m.UserEmail, new { @class = "form-control"})
                                <p class="help-block">Example block-level help text here.</p>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                @*<input class="form-control" placeholder="Enter text">*@
                                @Html.TextBoxFor(m => m.UserPassword, new { @class = "form-control" })
                            </div>                                   
                            <div class="form-group">
                                <label>Select A Role For The User</label>
                                @Html.DropDownList("UserRole", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...")
                            </div>                                    
                            <button type="submit" class="btn btn-success">Create User</button>                                    
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
  


